{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "strict": false,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"],
      "@images/*": ["public/images/*"],
      "@data/*": ["src/i18n/locales/*"]
    }
  }
}
