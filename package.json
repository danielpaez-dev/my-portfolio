{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky install",
    "format": "prettier --write . --config .prettierrc.json",
    "test": "echo \"No tests specified\""
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.8",
    "@astrojs/react": "^4.2.0",
    "@astrojs/vercel": "^8.0.5",
    "@tailwindcss/vite": "^4.0.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "aos": "^2.3.4",
    "astro": "^5.2.5",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "*.{html,css,md,json,js}": [
    "prettier --write"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "globals": "^15.15.0",
    "path-to-regexp": "^6.2.2",
    "postcss": "^8.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.0.5",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "src/**/*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
