{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run generate-readmes && concurrently \"astro dev --host\" \"wait-on http://localhost:4321 && npm run generate-pdf\"",
    "start": "npm run generate-readmes && concurrently \"astro dev\" \"wait-on http://localhost:4321 && npm run generate-pdf\"",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky install",
    "format": "prettier --write . --config .prettierrc.json",
    "test": "echo \"No tests specified\"",
    "generate-readmes": "node ./generate-readmes.js",
    "build:readmes": "npm run build && npm run generate-readmes",
    "postbuild": "node ./generate-pdf.js",
    "generate-pdf": "node ./generate-pdf.js"
  },
  "dependencies": {
    "@astrojs/react": "^4.2.0",
    "@astrojs/vercel": "^8.0.5",
    "@mdx-js/mdx": "^3.1.0",
    "@tailwindcss/vite": "^4.0.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "aos": "^2.3.4",
    "astro": "^5.2.5",
    "glob": "^11.0.1",
    "hotkeypad": "^1.0.1",
    "husky": "^9.1.7",
    "mdx": "^0.3.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "puppeteer": "^24.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark-gfm": "^4.0.1"
  },
  "*.{html,css,md,json,js}": [
    "prettier --write"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "globals": "^15.15.0",
    "path-to-regexp": "^6.2.2",
    "postcss": "^8.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.0.5",
    "typescript": "^5.4.5",
    "wait-on": "^8.0.2"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "src/**/*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
